%header.header
  .header__inner
    %h1.header__title
      = link_to 'Cheers!', '/', class: 'header__title-link'
    %ul.header__user-action-items
      %li.header__user-action-item
        .icon-link
          =link_to '/' do
            %i.fa.fa-home
            %p.icon-link-text ホーム
      %li.header__user-action-item
        .icon-link
          =link_to '/posts/new' do
            %i.fa.fa-pencil
            %p.icon-link-text 投稿
      %li.header__user-action-item
        .icon-link
          =link_to '/user' do
            %i.fa.fa-bell
            %p.icon-link-text 通知
      %li.header__user-action-item
        =link_to('', '/user', class: 'user-icon')
